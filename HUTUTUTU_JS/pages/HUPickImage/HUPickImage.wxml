<!--pages/HUPickImage/HUPickImage.wxml-->

<view class="page">
  <view style="height: 5vw;"></view>
  <view class="img-container">
    <image class="image" src="{{imgPath}}" mode="widthFix" />
  </view>

  <view class="colorBoard">
    <view class="colorItem" wx:for="{{colors}}" wx:key="item" style="background-color: rgb({{item}});"></view>
  </view>
  <view class="btnBoard">
    <van-button color="linear-gradient(to right, #1989FA, #4bb0ff)" bindclick="selectImageClick">选择图片</van-button>
    <van-button color="linear-gradient(to right, #1989FA, #4bb0ff)" bindclick="convertGray">转灰图</van-button>
    <van-button color="linear-gradient(to right, #1989FA, #4bb0ff)" bindclick="saveImageClick">识别矩形</van-button>
  </view>

  <view class="image-result">
    <image class="image" src="{{imgBase64}}" mode="widthFix" />
  </view>

  <view style="height: 5vw;"></view>


</view>

